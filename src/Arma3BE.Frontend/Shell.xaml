<Window x:Class="Arma3BE.Frontend.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:local="clr-namespace:Arma3BE.Frontend"
        xmlns:inf="clr-namespace:Arma3BE.Frontend.Infrastructure;assembly=Arma3BE.Frontend.Infrastructure"
        mc:Ignorable="d"
        Title="Shell">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{x:Static inf:RegionNames.MainMenuRegion}" ></ContentControl>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static inf:RegionNames.MainRegionRegion}" ></ContentControl>
    </Grid>
</Window>
